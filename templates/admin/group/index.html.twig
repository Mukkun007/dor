{% extends 'admin/base.html.twig' %}

{% block title %}Groupes{% endblock %}

{% block body %}

    <div class="pagetitle">
        <h1>Groupes</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">Groupes</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <div class="d-inline-flex mb-4">
        <a href="{{ path('admin_group_new') }}" class="btn btn-sm btn-primary me-2">Ajouter un groupe</a>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card pt-5">
                    <div class="card-body">
                        <!-- Default Table -->
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Utilisateurs</th>
                                    <th>Menus</th>
                                    <th>Date d’ajout</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for group in groups %}
                                    <tr>
                                        <td>{{ group.libelle }}</td>
                                        <td>{% for user in group.users %}{{ user.name }}</br>{% endfor %}</td>
                                        <td>{% for menu in group.menus %}{{ menu.parent.libelle }} - {{ menu.libelle }}</br>{% endfor %}</td>
                                        <td>{{ group.dateInsert|date('Y-m-d H:i:s') }}</td>
                                        <td class="text-right">
                                            <a href="{{ path('admin_group_edit', {'id': group.id}) }}" class="btn btn-sm btn-primary">Détails</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <!-- End Default Table Example -->

                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
