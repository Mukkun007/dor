{% extends 'admin/base.html.twig' %}

{% block title %}Edition paramètre{% endblock %}

{% block body %}

    <div class="pagetitle">
        <h1>Paramètres</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('admin_setting_index') }}">Paramètres</a></li>
                <li class="breadcrumb-item active">{{ title }}</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">

        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ title }}</h5>

                        <!-- General Form Elements -->
                        <form name="resource" class="row g-3" method="post">
                            {{ form_row(form._token) }}
                            <div class="col-lg-12">
                                <textarea class="tinymce-editor d-none" name="setting[value]" aria-label="false" required>
                                    {{ (valeur is not null ? valeur.value) }}
                                </textarea>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-sm btn-primary" type="submit">Valider</button>
                            </div>
                        </form><!-- End General Form Elements -->

                    </div>
                </div>

            </div>
        </div>

    </section>

{% endblock %}

{% block javascripts_vendor %}

    <script src="{{ asset('vendor/tinymce/tinymce.min.js') }}"></script>

{% endblock %}

{% block javascripts %}

    <script src="{{ asset('js/setting_form.js') }}"></script>

{% endblock %}
