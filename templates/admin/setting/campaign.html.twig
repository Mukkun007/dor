{% extends 'admin/base.html.twig' %}

{% block title %}Edition paramètre{% endblock %}

{% block body %}

    <div class="pagetitle">
        <h1>Paramètres</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('admin_setting_index') }}">Paramètres</a></li>
                <li class="breadcrumb-item active">Date de fin de campagne</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">

        <div class="row">
            <div class="col-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Date de fin de campagne</h5>

                        <!-- General Form Elements -->
                        <form name="resource" class="row g-3" method="post">
                            {{ form_row(form._token) }}
                            <div class="col-lg-12">
                                <div class="form-floating">
                                    <input type="date" id="setting_name" placeholder="Code" name="setting[value]" class="form-control" value="{{ (valeur is not null ? valeur.value) }}" required>
                                    <label for="setting_name">Date</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-sm btn-primary" type="submit">Valider</button>
                            </div>
                        </form><!-- End General Form Elements -->

                    </div>
                </div>

            </div>
        </div>

    </section>

{% endblock %}
